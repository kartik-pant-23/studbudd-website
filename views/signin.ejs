<%- include('partials/header'); -%>
<body id="signin">
    <form id="signin-form" action="/userHome" class="form-signin" method="GET">
      <img src="/images/logo-dark.png" class="signin-icon" alt="">
      <div id="alert">
        
      </div>
      <input id="userId" type="text" class="form-control top"
        placeholder="<%= data=='org' ?'Enter email/domain' :'Enter email address'%>" required>
      <input id="password" type="password" class="form-control bottom" placeholder="Password" required>
      <% if(data=='org'){ %>
        <a style="padding-top: 20px; font-size: 15px;;" href="">Forgot Password??</a>
      <% } %>
      <input id="signin-btn" class="btn btn-lg btn-primary btn-block" type="button" value="Sign me in"/>
      <br />
      <br />
      <% if(data=='org'){ %>
        <p style="color: azure;">Don't have an account? <a href="/register"><em>Register</em></a></p>
      <% } %>
      <br />
      <% if(data=='user'){ %>
        <p class="p-signin">*In case youâ€™ve forgot your password, ask organization admin to change it for you.</p>
        <% } %>
          
    </form>

<script src="/js/signin.js"></script>
  </body>

  </html>